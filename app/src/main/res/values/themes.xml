<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EcoTong_Android" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/green_primary</item>
    </style>

    <style name="Theme.EcoTong_Android" parent="Base.Theme.EcoTong_Android" />

    <style name="Big32sp" parent="Base.Theme.EcoTong_Android">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Big32sp.GreenPrimary" parent="Big32sp">
        <item name="android:textColor">@color/green_primary</item>
    </style>

    <style name="Big32sp.GreenSecondary" parent="Big32sp">
        <item name="android:textColor">@color/green_secondary</item>
    </style>

    <style name="Medium20sp" parent="Base.Theme.EcoTong_Android">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Medium20sp.GreenPrimary" parent="Medium20sp">
        <item name="android:textColor">@color/green_primary</item>
    </style>

    <style name="bold" parent="Medium20sp">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn.GreenSecondary" parent="bold">
        <item name="android:backgroundTint">@color/green_secondary</item>
        <item name="android:textColor">@color/green_primary</item>
    </style>

    <style name="btn.GreenPrimary" parent="bold">
        <item name="android:backgroundTint">@color/green_primary</item>
        <item name="android:textColor">@color/green_secondary</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/green_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon_inset</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.EcoTong_Android</item>
    </style>
</resources>