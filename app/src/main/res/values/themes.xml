<resources>

    <style name="Base.Theme.EcoTong_Android" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/green_primary</item>
    </style>

    <style name="Theme.EcoTong_Android" parent="Base.Theme.EcoTong_Android" />

    <style name="ShapeAppearance.M3.Sys.Shape.Corner.Large.TopOnly">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="Big32sp" parent="Base.Theme.EcoTong_Android">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Big32sp.GreenPrimary" parent="Big32sp">
        <item name="android:textColor">@color/green_primary</item>
    </style>

    <style name="Big32sp.GreenSecondary" parent="Big32sp">
        <item name="android:textColor">@color/green_secondary</item>
    </style>

    <style name="Big32sp.Gray" parent="Big32sp">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Medium20sp" parent="Base.Theme.EcoTong_Android">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Medium20sp.GreenPrimary" parent="Medium20sp">
        <item name="android:textColor">@color/green_primary</item>
    </style>

    <style name="Small" parent="Base.Theme.EcoTong_Android">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Small.GreenPrimary" parent="Small">
        <item name="android:textColor">@color/green_primary</item>
    </style>

    <style name="Small.Gray" parent="Small">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Smallest" parent="Base.Theme.EcoTong_Android">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Smallest.Gray" parent="Smallest">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="bold" parent="Medium20sp">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn" parent="bold">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="btn.GreenSecondary" parent="btn">
        <item name="android:backgroundTint">@color/green_secondary</item>
        <item name="android:textColor">@color/green_primary</item>
    </style>

    <style name="btn.GreenPrimary" parent="btn">
        <item name="android:backgroundTint">@color/green_primary</item>
        <item name="android:textColor">@color/green_secondary</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/green_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon_inset</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.EcoTong_Android</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>