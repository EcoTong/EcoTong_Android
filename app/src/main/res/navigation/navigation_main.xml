<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/welcomeFragment">
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="id.ac.istts.ecotong.ui.welcome.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_toLoginFragment"
            app:destination="@id/toLoginFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_welcomeFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/toLoginFragment"
        android:name="id.ac.istts.ecotong.ui.welcome.ToLoginFragment"
        android:label="fragment_to_login"
        tools:layout="@layout/fragment_to_login">
        <action
            android:id="@+id/action_toLoginFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_toLoginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="id.ac.istts.ecotong.ui.auth.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
 />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="id.ac.istts.ecotong.ui.auth.register.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_signUpFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="id.ac.istts.ecotong.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_postFragment"
            app:destination="@id/postFragment" />
        <action
            android:id="@+id/action_homeFragment_to_activeQuestFragment"
            app:destination="@id/activeQuestFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="id.ac.istts.ecotong.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="id.ac.istts.ecotong.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_completedQuestFragment"
            app:destination="@id/completedQuestFragment" />
        <action
            android:id="@+id/action_profileFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:popUpTo="@id/navigation_main"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_profileFragment_to_redeemPointsFragment"
            app:destination="@id/redeemPointsFragment" />
    </fragment>
    <fragment
        android:id="@+id/scanFragment"
        android:name="id.ac.istts.ecotong.ui.scan.ScanFragment"
        android:label="fragment_scan"
        tools:layout="@layout/fragment_scan">
        <action
            android:id="@+id/action_scanFragment_to_scanResultFragment"
            app:destination="@id/scanResultFragment"
            app:popUpTo="@id/scanFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="id.ac.istts.ecotong.ui.history.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/postFragment"
        android:name="id.ac.istts.ecotong.ui.post.PostFragment"
        android:label="fragment_post"
        tools:layout="@layout/fragment_post">
        <action
            android:id="@+id/action_postFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/postFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/activeQuestFragment"
        android:name="id.ac.istts.ecotong.ui.activequest.ActiveQuestFragment"
        android:label="fragment_active_quest"
        tools:layout="@layout/fragment_active_quest">
        <action
            android:id="@+id/action_activeQuestFragment_to_detailQuestFragment"
            app:destination="@id/detailQuestFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="id.ac.istts.ecotong.ui.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_appInfoFragment"
            app:destination="@id/appInfoFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_toLoginFragment"
            app:destination="@id/toLoginFragment"
            app:popUpTo="@id/navigation_main"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/appInfoFragment"
        android:name="id.ac.istts.ecotong.ui.settings.AppInfoFragment"
        android:label="fragment_app_info"
        tools:layout="@layout/fragment_app_info" />
    <fragment
        android:id="@+id/scanResultFragment"
        android:name="id.ac.istts.ecotong.ui.scanresult.ScanResultFragment"
        android:label="fragment_scan_result"
        tools:layout="@layout/fragment_scan_result" >
        <argument
            android:name="madeFrom"
            app:argType="string" />
        <action
            android:id="@+id/action_scanResultFragment_to_scanFragment"
            app:destination="@id/scanFragment"
            app:popUpTo="@id/scanResultFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/redeemPointsFragment"
        android:name="id.ac.istts.ecotong.ui.redeempoints.RedeemPointsFragment"
        android:label="fragment_redeem_points"
        tools:layout="@layout/fragment_redeem_points" />
    <fragment
        android:id="@+id/detailQuestFragment"
        android:name="id.ac.istts.ecotong.ui.detailquest.DetailQuestFragment"
        android:label="fragment_detail_quest"
        tools:layout="@layout/fragment_detail_quest" />
    <fragment
        android:id="@+id/completedQuestFragment"
        android:name="id.ac.istts.ecotong.ui.completedquest.CompletedQuestFragment"
        android:label="fragment_completed_quest"
        tools:layout="@layout/fragment_completed_quest" />
</navigation>