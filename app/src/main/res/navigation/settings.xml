<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    app:startDestination="@id/profileFragment">
    <fragment
        android:id="@+id/profileFragment"
        android:name="id.ac.istts.ecotong.ui.profile.ProfileFragment"
        tools:layout="@layout/fragment_profile"
        android:label="fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:popUpTo="@id/navigation_main"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="id.ac.istts.ecotong.ui.settings.SettingsFragment"
        tools:layout="@layout/fragment_settings"
        android:label="fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_appInfoFragment"
            app:destination="@id/appInfoFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_toLoginFragment"
            app:destination="@id/toLoginFragment"
            app:popUpTo="@id/navigation_main"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/appInfoFragment"
        android:name="id.ac.istts.ecotong.ui.settings.AppInfoFragment"
        tools:layout="@layout/fragment_app_info"
        android:label="fragment_app_info" />
</navigation>